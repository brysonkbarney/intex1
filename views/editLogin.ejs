      <!-- Verify Login Form -->
      <!-- Form for updating username and password -->
      <div style="display: flex; justify-content: center; align-items: center; height: 60vh;">
        <form action="/editLogin" method="post"
          style="padding: 20px; background-color: white; border-radius: 10px; max-width: 400px; width: 100%; box-sizing: border-box;">
          <!-- Form title -->
          <p style="color: black; font-size: 20px; font-weight: bold; text-align: center;">Update your username and
            password below</p>
          <!-- Username input -->
          <label for="login-username">Username:</label><br>
          <input type="text" id="login-username" name="username" value="<%= userinfo.username %>" required
            style="width: 100%; margin-bottom: 10px" ; required><br>

          <!-- Password input -->
          <label for="login-password">Password:</label><br>
          <input type="password" id="login-password" name="password" value="<%= userinfo.password %>" required
            style="width: 100%; margin-bottom: 10px;" required><br>
          <br>
          <!-- Update button -->
          <div style="display: flex; justify-content: center;">
            <button type="submit"
              style="width: 40%; padding: 8px; background-color: #56b8e6; color: white; border: none; border-radius: 5px; cursor: pointer;">Update</button>
          </div>

        </form>
      </div>

      <!-- Line breaks for spacing -->
      <br><br>
    </div>
